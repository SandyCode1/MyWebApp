@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #0078d7 0%, #00bcf2 100%);
        color: #fff;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .welcome-container {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 40px 60px;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.2);
        text-align: center;
        backdrop-filter: blur(8px);
        max-width: 600px;
    }

    h1 {
        font-size: 2.8rem;
        margin-bottom: 10px;
        color: #fff;
        font-weight: 700;
        letter-spacing: 1px;
    }

    p {
        font-size: 1.1rem;
        color: #e0e0e0;
    }

    a {
        color: #fff;
        font-weight: bold;
        text-decoration: underline;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #ffd700;
        }

    .btn-primary {
        display: inline-block;
        margin-top: 20px;
        background-color: #fff;
        color: #0078d7;
        border: none;
        border-radius: 25px;
        padding: 12px 28px;
        font-size: 1rem;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #0078d7;
            color: #fff;
            transform: translateY(-2px);
        }
</style>

<div class="welcome-container">
    <h1>Welcome to My World!!! 🌎</h1>
    <p>
        Explore the power of <strong>ASP.NET Core</strong> and <strong>Azure App Service</strong> —
        deploy modern web apps with CI/CD, scalability, and reliability.
    </p>
    <a class="btn-primary" href="https://learn.microsoft.com/aspnet/core" target="_blank">
        Learn More
    </a>
</div>
